<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        backupGlobals               = "false"
        backupStaticAttributes      = "false"
        colors                      = "true"
        processIsolation            = "false"
        stopOnFailure               = "false"
        syntaxCheck                 = "false"
        bootstrap                   = "./bootstrap.php" >

    <testsuites>
        <testsuite name="GeoLocation Unit Tests">
            <directory>./unit</directory>
        </testsuite>
        <testsuite name="GeoLocation Functional Tests">
            <directory>./functional</directory>
        </testsuite>
    </testsuites>    

</phpunit>